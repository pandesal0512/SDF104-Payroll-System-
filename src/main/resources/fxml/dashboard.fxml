<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>

        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="ðŸ“Š DASHBOARD">
            <font>
                <Font name="Arial Bold" size="20.0" />
            </font>
        </Label>


        <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>

                <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #bebebe; -fx-border-width: 2; -fx-background-color: #f8f9fa; -fx-padding: 20;">
                    <children>
                        <Label text=" TOTAL EMPLOYEES">
                            <font>
                                <Font name="Arial Bold" size="11.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalEmployeesLabel" text="0">
                            <font>
                                <Font name="Arial Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>


                <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #bebebe; -fx-border-width: 2; -fx-background-color: #f8f9fa; -fx-padding: 20;" GridPane.columnIndex="1">
                    <children>
                        <Label text=" ACTIVE EMPLOYEES">
                            <font>
                                <Font name="Arial Bold" size="11.0" />
                            </font>
                        </Label>
                        <Label fx:id="activeEmployeesLabel" text="0">
                            <font>
                                <Font name="Arial Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>


                <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #bebebe; -fx-border-width: 2; -fx-background-color: #f8f9fa; -fx-padding: 20;" GridPane.columnIndex="2">
                    <children>
                        <Label text="TOTAL DEPARTMENTS">
                            <font>
                                <Font name="Arial Bold" size="11.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalDepartmentsLabel" text="0">
                            <font>
                                <Font name="Arial Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>


                <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #bebebe; -fx-border-width: 2; -fx-background-color: #e7f5ff; -fx-padding: 20;" GridPane.rowIndex="1">
                    <children>
                        <Label text="PRESENT TODAY">
                            <font>
                                <Font name="Arial Bold" size="11.0" />
                            </font>
                        </Label>
                        <Label fx:id="presentTodayLabel" text="0">
                            <font>
                                <Font name="Arial Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>


                <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #bebebe; -fx-border-width: 2; -fx-background-color: #fff3cd; -fx-padding: 20;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <Label text=" LATE TODAY">
                            <font>
                                <Font name="Arial Bold" size="11.0" />
                            </font>
                        </Label>
                        <Label fx:id="lateTodayLabel" text="0">
                            <font>
                                <Font name="Arial Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>


                <VBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #bebebe; -fx-border-width: 2; -fx-background-color: #f8d7da; -fx-padding: 20;" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <children>
                        <Label text="ABSENT TODAY">
                            <font>
                                <Font name="Arial Bold" size="11.0" />
                            </font>
                        </Label>
                        <Label fx:id="absentTodayLabel" text="0">
                            <font>
                                <Font name="Arial Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </GridPane>


        <Label text="Recent Activity">
            <font>
                <Font name="Arial Bold" size="14.0" />
            </font>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>


        <TableView fx:id="recentActivityTable" prefHeight="250.0">
            <columns>
                <TableColumn fx:id="timeColumn" prefWidth="100.0" text="Time" />
                <TableColumn fx:id="employeeColumn" prefWidth="250.0" text="Employee" />
                <TableColumn fx:id="actionColumn" prefWidth="100.0" text="Action" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
            </columns>
            <placeholder>
                <Label text="No recent activity" />
            </placeholder>
        </TableView>
    </children>
</VBox>
