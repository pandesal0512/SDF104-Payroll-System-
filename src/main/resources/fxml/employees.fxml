<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.EmployeeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <!-- Title -->
        <Label alignment="CENTER" maxWidth="Infinity" text="ðŸ‘¥ EMPLOYEES MANAGEMENT">
            <font>
                <Font name="Arial Bold" size="20.0" />
            </font>
        </Label>

        <!-- Search and Action Buttons -->
        <HBox prefHeight="45.0" prefWidth="600.0" spacing="10.0">
            <children>
                <TextField fx:id="searchField" prefHeight="25.0" prefWidth="274.0" promptText="Search employees..." />
                <Button onAction="#handleAddEmployee" text="âž• Add Employee"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button onAction="#handleCopyQRCode" text="ðŸ“‹ Copy QR Code"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                <Button fx:id="exportButton" mnemonicParsing="false" onAction="#handleExport" text="ðŸ“¥ Export" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" top="10.0" right="20.0" />
            </padding>
        </HBox>

        <!-- Employee Table -->
        <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="qrColumn" prefWidth="180.0" text="QR Code" />
                <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                <TableColumn fx:id="positionColumn" prefWidth="150.0" text="Position" />
                <TableColumn fx:id="deptColumn" prefWidth="150.0" text="Department" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
            </columns>
            <placeholder>
                <Label text="No employees found" />
            </placeholder>
        </TableView>

        <!-- Pagination -->
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Label fx:id="paginationLabel" text="Showing employees" />
                <Button onAction="#handleEditEmployee" text="âœï¸ Edit"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
                <Button onAction="#handleDeleteEmployee" text="ðŸ—‘ï¸ Delete"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>