<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EmployeeController">
    <children>

        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="ðŸ‘¥ EMPLOYEES MANAGEMENT">
            <font>
                <Font name="Arial Bold" size="12.0" />
            </font>
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>


        <HBox prefHeight="45.0" prefWidth="600.0">
            <children>
                <TextField fx:id="searchField" prefHeight="25.0" prefWidth="274.0" promptText="Search: " />
                <Button fx:id="employeeButton" mnemonicParsing="false" text="Add Employee">
                    <HBox.margin>
                        <Insets left="20.0" right="5.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="exportButton" mnemonicParsing="false" text="Export">
