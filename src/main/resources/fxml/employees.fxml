        </Label>

        <!-- Search and Action Buttons -->
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <TextField fx:id="searchField" prefWidth="350.0" promptText="Search employees..." style="-fx-font-size: 14px; -fx-padding: 10;" />
                <Button onAction="#handleAddEmployee" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;" text="âž• Add Employee" />
