        </TableView>


        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Label text="Showing 1-50 of 150 employees" />
                <Button fx:id="previousButton" mnemonicParsing="false" text="&lt; Previous" />
                <Button fx:id="nextButton" mnemonicParsing="false" text="Next &gt;" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" top="10.0" />
            </padding>
        </HBox>
    </children>
