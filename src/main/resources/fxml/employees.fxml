                <TableColumn fx:id="positionColumn" prefWidth="306.0" style="-fx-font-size: 14px;" text="Position" />
                <TableColumn fx:id="deptColumn" prefWidth="326.0" style="-fx-font-size: 14px;" text="Department" />
                <TableColumn fx:id="hourlyRateColumn" prefWidth="182.0" style="-fx-font-size: 14px;" text="Hourly Rate" />
                <TableColumn fx:id="statusColumn" prefWidth="182.0" style="-fx-font-size: 14px;" text="Status" />
            </columns>
            <placeholder>
                <Label text="No employees found">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </placeholder>
        </TableView>

        <!-- Bottom Actions -->
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <children>
                <Label fx:id="paginationLabel" text="Showing employees">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <HBox HBox.hgrow="ALWAYS" />
                <Button onAction="#handleEditEmployee" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;" text="âœï¸ Edit" />
