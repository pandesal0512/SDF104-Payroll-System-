                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" top="10.0" />
            </padding>
        </HBox>


        <TableView prefHeight="236.0" prefWidth="567.0" VBox.vgrow="NEVER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="qrColumn" prefWidth="139.3333282470703" text="QR Code" />
                <TableColumn fx:id="nameColumn" prefWidth="156.66668701171875" text="Name" />
