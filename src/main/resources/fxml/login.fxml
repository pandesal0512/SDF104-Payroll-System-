<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <children>
        <!-- Title -->
        <Label text=" HR SYSTEM LOGIN" textFill="#333333">
            <font>
                <Font name="Arial Bold" size="28.0" />
            </font>
        </Label>

        <Label text="Payroll &amp; Attendance Management" textFill="#666666">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <!-- Spacer -->
        <VBox prefHeight="20.0" />

        <!-- Username Field -->
        <VBox spacing="5.0">
            <Label text="Username" textFill="#333333">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Label>
            <TextField fx:id="usernameField" promptText="Enter username" style="-fx-font-size: 14px; -fx-padding: 10;" />
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5.0">
            <Label text="Password" textFill="#333333">
                <font>
                    <Font name="Arial Bold" size="12.0" />
                </font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-font-size: 14px; -fx-padding: 10;" />
        </VBox>

        <!-- Error Message -->
        <Label fx:id="errorLabel" maxWidth="320.0" textFill="#d32f2f" visible="false" wrapText="true">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <!-- Login Button -->
        <Button fx:id="loginButton" maxHeight="40.0" maxWidth="320.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="320.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12;" text="LOGIN">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>

        <!-- Info Label -->
        <Label style="-fx-font-style: italic;" text="Default: admin / admin123" textFill="#999999">
            <font>
                <Font size="11.0" />
            </font>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>
    </children>
</VBox>
